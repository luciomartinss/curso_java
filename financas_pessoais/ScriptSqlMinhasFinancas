/*
PROJETO FINANCAS_PESSOAIS

TABELAS:{
		USUARIO(
			IDUSUARIO - INT - AUTO_INCREMENT
			NOME - VARCHAR(30)
			EMAIL - VARCHAR(30)
			TELEFONE - VARCHAR(30)
			ENDERECO (ESTADO & CIDADE)
			GENERO - CHAR(1)
			),
		TIPO_LANCAMENTO(
			IDTIPO_LANCAMENTO - INT - AUTO_INCREMENT
			NOME - VARCHAR(30) "ENTRADA || SAIDA || INVESTIMENTO"
			),
		METODO_OPERACAO(
			IDTIPO - INT - AUTO_INCREMENT
			NOME - VARCHAR(30) "DEBITO || CARTAO_CREDITO || PIX || DEPOSITOS || ESPECIE"
			),
		CARTOES(
			IDCARTAO
			NOME
			VENCIMENTO
			ID_USUARIO
			),
		CATEGORIA(
			IDCATEGORIA
			NOME - VARCHAR(30) - "CASA, ALIMENTACAO, TRANSPORTE, EDUCAÇÃO, PET, LAZER, PESSOAIS, SAUDE, OUTRAS ENTRADAS, OUTRAS SAIDAS"
			),

		LANCAMENTOS(
			IDLANCAMENTOS - INT - AUTO_INCREMENT
			DESCRICAO - VARCHAR(30)
			VALOR - FLOAT(10,2)
			ID_USUARIO - INT
			ID_TIPO_LANCAMENTO
			ID_METODO_OPERACAO
			ID_CARTAO
			ID_CATEGORIA
			DATA
			GASTOS FIXOS? - BOLEAN
			VENCIMENTO
			)

*/

CREATE DATABASE FINCANCAS_PESSOAIS;

CREATE TABLE USUARIO(
	IDUSUARIO INT PRIMARY KEY AUTO_INCREMENT,
	NOME VARCHAR(30) NOT NULL,
	GENERO ENUM('M','F') NOT NULL,
	EMAIL VARCHAR(50) UNIQUE,
	CPF VARCHAR(15) UNIQUE
);
